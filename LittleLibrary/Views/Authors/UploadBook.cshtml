@model LittleLibrary.ViewModels.BookVM

@{
    ViewData["Title"] = "UploadBook";
}

<h3 style="padding-top:30px; font-weight:bold;">Upload New Book</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="UploadBook" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" required />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatePublished" class="control-label"></label>
                <input asp-for="DatePublished" class="form-control" required />
                <span asp-validation-for="DatePublished" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Summary" class="control-label"></label>
                <input asp-for="Summary" class="form-control" required />
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookImageFile" class="control-label">Upload Book Cover:</label>
                <input type="file" asp-for="BookImageFile" class="form-control" required />
                <span asp-validation-for="BookImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookContentFile" class="control-label">Upload Book:</label>
                <input type="file" asp-for="BookContentFile" multiple />
                <span asp-validation-for="BookContentFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-action="UploadAndSaveBook" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
