@model IEnumerable<LittleLibrary.ViewModels.RoleVM>


@{
    ViewData["Title"] = "Detail";
}

<h3>Roles assigned to @ViewBag.UserName</h3>

<p>
    @Html.ActionLink("Assign Roles", "Assign",
                        new { userName = @ViewBag.UserName })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Delete Role", "DeleteUserRole", new { email = @ViewBag.UserName,
                                                                        roleName = item.RoleName})
            </td>
        </tr>
        }
    </tbody>
</table>


